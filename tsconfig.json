{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    // "moduleDetection": "force",
    "allowJs": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true // add undefined to index signatures
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "buildOptions": {
    "outDir": "dist"
  }
}
